<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AccountNameCanOnlyInCHandEN</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(
  REGEX(
    Name, 
    &quot;^[a-z A-Z\\u4E00-\\u9FFF]+$&quot;
  )
)</errorConditionFormula>
    <errorMessage>帳戶名稱請使用中文或英文字維護!</errorMessage>
</ValidationRule>
